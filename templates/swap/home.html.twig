</div>




<div class="container" style="margin-top: 20px;">
    <div class="row" style="display: flex;align-items: center;justify-content: center;">
        {% for produit in produits %}
            <div class="card col-lg-3" style="margin: 20px;">
                <div class="card-header">
                    {{ produit.titre }}
                </div>
                <img class="card-img-top" src="{{ produit.image }}" style="width: 250px;height: 250px;margin-top: 10px;">
                <div class="card-body">
                    <p class="card-text">description</p>
                </div>
                <div class="card-footer row">
                    <p class="col-lg-8">{{ produit.valeur ~ "€" }}</p>
                    <a href="#" class="btn btn-success col-lg-4">Acheter</a>
                </div>
            </div>
        {% endfor %}
    </div>
</div>


