    body, html {
      height: 100%;
    }

    .carousel-item {
      /* Half height */
      height: 70vh;
    }

    .carousel-item .texte {
      position:absolute;
      color:white;
      font-size:1.5em;
      width:25%;      /* même largeur que l’image */
    }

    .carousel-item .texte1 {
      top: 2rem;
      left: 3rem;
    }

    .carousel-item .texte2 {
      top: 2rem;
      right: 3rem;
      text-align: right;
      width:35%;
    }
    .carousel-item .texte3 {
