{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block body %}


<div class="row mt-5 justify-content-center">
    <div class="col-6">
   
        {{ form_start(monFormulaire) }}

            <h1>Inscription</h1>

            <div class="form-group row">
                <div class="col-sm-10">
                    <label for="">Email</label>
                    {{ form_widget(monFormulaire.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'} }) }}
                    <small id="emailHelp" class="form-text text-muted">Nous ne partagerons jamais votre email</small>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <label for="">Mot de passe</label>
                    {{ form_widget(monFormulaire.password, { 'attr': {'class': 'form-control', 'placeholder': 'Mot de passe'} }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <label for="">Adresse</label>
                    {{ form_widget(monFormulaire.adresse, { 'attr': {'class': 'form-control', 'placeholder': 'adresse'} }) }}
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col-sm-10">
                    <label for="">Téléphone</label>
                    {{ form_widget(monFormulaire.telephone, { 'attr': {'class': 'form-control', 'placeholder': 'téléphone'} }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <label for="">Ville</label>
                    {{ form_widget(monFormulaire.ville, { 'attr': {'class': 'form-control', 'placeholder': 'ville'} }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <label for="">Code Postal</label>
                    {{ form_widget(monFormulaire.code_postale, { 'attr': {'class': 'form-control', 'placeholder': 'code postal'} }) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    {{ form_widget(monFormulaire.inscription, { 'attr': {'class': 'btn btn-secondary', 'label': 'Inscription'} }) }}
                </div>
            </div>

        {{ form_end(monFormulaire) }}
        
    </div>
</div>


{% endblock %}