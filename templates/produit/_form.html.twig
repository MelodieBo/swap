    <div class="row mt-5 justify-content-center">
        <div class="col-6">
                <fieldset>
                    <h1>Déposer une annonce</h1>

                    {{ form_start(form) }}

                        <div class="form-group row">
                            <div class="col-sm-10">
                                <label for="">Titre</label>
                                {{ form_widget(form.titre, { 'attr': {'class': 'form-control', 'placeholder': 'Titre'} }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10">
                                <label for="">Description</label>
                                {{ form_widget(form.description, { 'attr': {'class': 'form-control', 'placeholder': 'Décrivez votre article'} }) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10">
                                <label for="">Valeur estimée</label>
                                {{ form_widget(form.valeur, { 'attr': {'class': 'form-control', 'placeholder': 'A combien estimez-vous votre bien ?'} }) }}
                            </div>
                        </div>
                    

                        <div class="form-group">
                            <label for="exampleInputFile">Télécharger une image</label>
                            {{ form_widget(form.image, { 'attr': {'class': 'form-control-file'} }) }}
                            <small id="fileHelp" class="form-text text-muted">Votre photo ne doit pas dépasser 20 Mo</small>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10">
                                <label for="">Catégorie</label>
                                {{ form_widget(form.categorie) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-10">
                                {{ form_widget(form.publier, { 'attr': {'class': 'btn btn-secondary', 'label': 'Publier'} }) }}
                            </div>
                        </div>

                    {{ form_end(form) }}

                </fieldset>
        </div>
    </div>
